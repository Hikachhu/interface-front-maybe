{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@interface-front/different-page": ["libs/different-page/src/index.ts"],
      "@interface-front/entity": ["libs/entity/src/index.ts"],
      "@interface-front/graphics": ["libs/graphics/src/index.ts"],
      "@interface-front/menu": ["libs/menu/src/index.ts"],
      "@interface-front/networking": ["libs/networking/src/index.ts"],
      "@interface-front/notification": ["libs/notification/src/index.ts"],
      "@interface-front/storage": ["libs/storage/src/index.ts"],
      "@interface-front/usefull": ["libs/usefull/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
